<html>
    <head>
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <script>
            $(document).ready(()=>{
                
                $(":button").click(()=>{
                    $.get("message",(responsedata)=>{           //relative path
                        console.log(responsedata)

                    })
                })
            
                $("#b2").click(()=>{
                    let n=$("#num").val()
                    let obj={num:n}
                    $.ajax({
                        url:'square',
                        type:'POST',
                        data:JSON.stringify(obj),
                        
                        success:function(respdata){
                            $("#p1").html(`<h4>SQUARE:${respdata.sqr}</h4>`)
                        },

                        beforeSend:function(request){
                            request.setRequestHeader("Content-Type","application/json")
                        }
                    })
                })

                $("#b3").click(()=>{
                    $.ajax({
                        url:"https://reqres.in/api/users?page=2",
                        type:"GET",
                        success:function(res){
                            $("#p1").text(JSON.stringify(res))
                        }
                    })
                })
            })
        </script>
    </head>

    <body>
        <input type="button" id="b1" value="getmessage"/>
        <p id="p1"></p>
        <p id="p2"></p>

        <input type="text" id="num"/>
        <input type="button" id="b2" value="postobject"/>
        
        <input type="button" id="b3" value="getfromreqres"/>
    </body>
</html>